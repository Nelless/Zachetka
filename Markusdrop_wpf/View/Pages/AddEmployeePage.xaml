<Page x:Class="Markusdrop_wpf.View.Pages.AddEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Markusdrop_wpf.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEmployeePage">

    <Grid>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="12">
            <Button Content="Отменить" Width="80" Height="30"></Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Margin="4" Width="350">
            <UniformGrid HorizontalAlignment="Center" Margin="5">
                <TextBlock FontSize="20">Добавление Сотрудника</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="2">
                <TextBlock>Имя</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center">
                <TextBox x:Name="FirstNameTextBox" Width="150"></TextBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="2">
                <TextBlock>Фамилия</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center">
                <TextBox x:Name="LastNameTextBox" Width="150"></TextBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="2">
                <TextBlock>Отчество</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center">
                <TextBox x:Name="PatronymicTextBox" Width="150"></TextBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="2">
                <TextBlock>Телефон</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center">
                <TextBox x:Name="PhoneTextBox" Width="150"></TextBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="2">
                <TextBlock>Код паспорта</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center">
                <TextBox x:Name="PassportCodeTextBox" Width="150"></TextBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="2">
                <TextBlock>Номер паспорта</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center">
                <TextBox x:Name="PassportNumberTextBox" Width="150"></TextBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="2">
                <TextBlock>ИНН</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center">
                <TextBox x:Name="INNTextBox" Width="150"></TextBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="5">
                <TextBlock>СНИЛС</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center">
                <TextBox x:Name="SNILSTextBox" Width="150"></TextBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="5">
                <TextBlock>Email</TextBlock>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center">
                <TextBox x:Name="EmailTextBox" Width="150"></TextBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="10">
                <TextBlock HorizontalAlignment="Center">Роль:</TextBlock>
                <ComboBox x:Name="UserRoleComboBox" HorizontalAlignment="Center" Width="150"></ComboBox>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="10">
                <Button x:Name="AuthEmployeeButton" Content="Далее" Width="80" Height="25" Click="AuthEmployeeButton_Click"></Button>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Page>
