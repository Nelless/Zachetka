<Page x:Class="Markusdrop_wpf.View.Pages.EditEmployeeInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Markusdrop_wpf.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="800"
      Title="EditEmployeeInfoPage">

    <Grid>
        <!---->
        <TextBlock HorizontalAlignment="Center" FontSize="20">Изменение данных сотрудника</TextBlock>
        <UniformGrid HorizontalAlignment="Center" Width="200">
            <StackPanel Orientation="Vertical" Margin="0, 200, 0, 0">
                <StackPanel Margin="1">
                    <TextBlock>Имя</TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="BeforeFirstNameTextBlock" Text="{Binding first_name}" Margin="1" Height="18"></TextBox>
                </StackPanel>
                <StackPanel Margin="1">
                    <TextBlock>Фамилия</TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="BeforeLastNameTextBlock" Text="{Binding last_name}" Margin="1" Height="18"></TextBox>
                </StackPanel>
                <StackPanel Margin="1">
                    <TextBlock>Отчество</TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="BeforePatronymicTextBlock" Text="{Binding patronimyc}" Margin="1" Height="18"></TextBox>
                </StackPanel>
                <StackPanel Margin="1">
                    <TextBlock>Телефон</TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="BeforePhoneTextBlock" Text="{Binding phone}" Margin="1" Height="18"></TextBox>
                </StackPanel>
                <StackPanel Margin="1">
                    <TextBlock>Код паспорта</TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="BeforePassportCodeTextBlock" Text="{Binding passport_code}" Margin="1" Height="18"></TextBox>
                </StackPanel>
                <StackPanel Margin="1">
                    <TextBlock>номер паспорта</TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="BeforePassportNumberTextBlock" Text="{Binding passport_number}" Margin="1" Height="18"></TextBox>
                </StackPanel>
                <StackPanel Margin="1">
                    <TextBlock>ИНН</TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="BeforeINNTextBlock"  Text="{Binding INN}" Margin="1" Height="18"></TextBox>
                </StackPanel>
                <StackPanel Margin="1">
                    <TextBlock>СНИЛС</TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="BeforeSNILSTextBlock" Text="{Binding SNILS}" Margin="1" Height="18"></TextBox>
                </StackPanel>
                <StackPanel Margin="1">
                    <TextBlock>Email</TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="BeforeEmailTextBlock" Text="{Binding email}" Margin="1" Height="18"></TextBox>
                </StackPanel>
                <StackPanel Margin="0, 50, 0, 0">
                    <Button x:Name="EditEmployeeAcceptButton" Click="EditEmployeeAcceptButton_Click">Подтвердить</Button>
                </StackPanel>
            </StackPanel>
        </UniformGrid>
        <UniformGrid HorizontalAlignment="Left" Margin="20, 200 ,0 ,0" Width="200">
            <StackPanel Orientation="Vertical">
                <StackPanel Margin="2">
                    <TextBlock>Выбрать сотрудника:</TextBlock>
                </StackPanel>
                <StackPanel Margin="2">
                    <ComboBox x:Name="EditEmployeeComboBox" SelectionChanged="EditEmployeeComboBox_SelectionChanged"></ComboBox>
                </StackPanel>
            </StackPanel>
        </UniformGrid>
    </Grid>
</Page>
