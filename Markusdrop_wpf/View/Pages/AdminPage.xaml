<Page x:Class="Markusdrop_wpf.View.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Markusdrop_wpf.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="12">
            <Button Content="Выход" Width="80" Height="30"></Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left">
            <UniformGrid Margin="12">
                <Button x:Name="AddEmployeeButton" Content="Добавить и зарегистрировать сотрудника" Width="300" Height="100" Click="AddEmployeeButton_Click"></Button>
            </UniformGrid>
            <UniformGrid Margin="12">
                <Button x:Name="EditEmployeeInfoButton" Content="Изменить данные сотрудника" Width="300" Height="100" Click="EditEmployeeInfoButton_Click"></Button>
            </UniformGrid>
            <UniformGrid Margin="12">
                <Button x:Name="AreaEmployeeButton" Content="Прикрепить сотрудника к подразделению" Width="300" Height="100" Click="AreaEmployeeButton_Click"></Button>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Page>
