<Page x:Class="Markusdrop_wpf.View.Pages.AuthTypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Markusdrop_wpf.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthTypePage">

    <Grid>
        <StackPanel>
            <UniformGrid>
                <TextBlock>Выберете способ входа</TextBlock>
            </UniformGrid>
            <UniformGrid>
                <Button x:Name="EmployeeAuthButton" Click="EmployeeAuthButton_Click" Content="как Сотрудник"></Button>
            </UniformGrid>
            <UniformGrid>
                <Button x:Name="ManagerAuthButton" Click="ManagerAuthButton_Click" Content="как Руководитель"></Button>
            </UniformGrid>
            <UniformGrid>
                <Button x:Name="AdminAuthButton" Click="AdminAuthButton_Click" Content="как Администратор"></Button>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Page>
